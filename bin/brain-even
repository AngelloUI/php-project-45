#!/usr/bin/env php
<?php

declare(strict_types=1);

namespace Bin\BrainEven;

use function cli\line;
use function cli\prompt;

require_once __DIR__ . '/../vendor/autoload.php';

function getGreeting($name): string
{
    return "Hello, {$name}!";
}
function showGreeting(string &$name): void
{
    line('Welcome to the Brain Games!');
    echo 'May I have your name? ';
    $nameValue = trim(fgets(STDIN));
    setName($name, $nameValue);
    line(getGreeting($nameValue));
}

function isEven(int $number): bool
{
    return $number % 2 === 0;
}

function setName(string &$name, string $nameValue): void
{
    $name = $nameValue;
}
function gameIsEven(): void
{
    $userName = '';
    $rules = "Answer \"yes\" if the number is even, otherwise answer \"no\".";
    $scores = 0;
    showGreeting($userName);
    line($rules);
    $rightAnswer = true;
    while (($scores !== 3) && $rightAnswer) {
        $randomNumber = rand(1, 1000);
        $question = "Question: $randomNumber";
        line($question);
        $userAnswer = prompt('Your answer');
        $answer = isEven($randomNumber) ? "yes" : "no";
        if ($userAnswer === $answer) {
            $scores++;
            ($scores === 3) ? line("Correct!\nCongratulations, $userName!") : line("Correct!");
        } else {
            line("'$userAnswer' is wrong answer ;(. Correct answer was '$answer'.\nLet's try again, $userName!");
            $rightAnswer = false;
        }
    }
}

gameIsEven();

